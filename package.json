{
  "name": "company-timeoff",
  "version": "1.9.9",
  "description": "Absence Management Application",
  "scripts": {
    "dev": "NODE_ENV=development next -p 7777",
    "dev:inspect": "NODE_OPTIONS='--inspect' NODE_ENV=development next",
    "ci": "npm build",
    "build": "next build",
    "lint": "next lint",
    "start": "NODE_ENV=production next start -p 7666",
    "prettier": "prettier ./src/**/*.js",
    "prettier:fix": "prettier --write ./src/**/*.js"
  },
  "keywords": [
    "react",
    "nextjs",
    "timeoff",
    "vacation"
  ],
  "author": "Nico Domino <yo@ndo.dev>",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/newtelco/timeoff.git"
  },
  "bugs": {
    "url": "https://github.com/newtelco/timeoff/issues"
  },
  "homepage": "https://github.com/newtelco/timeoff",
  "license": "MIT",
  "dependencies": {
    "@fullcalendar/core": "^5.9.0",
    "@fullcalendar/daygrid": "^5.9.0",
    "@fullcalendar/google-calendar": "^5.9.0",
    "@fullcalendar/react": "^5.9.0",
    "@nivo/core": "^0.73.0",
    "@nivo/swarmplot": "^0.73.0",
    "@sentry/nextjs": "^6.12.0",
    "activedirectory2": "^2.1.0",
    "animejs": "^3.2.1",
    "apexcharts": "^3.28.1",
    "aws-sdk": "^2.988.0",
    "date-fns": "^2.23.0",
    "filepond": "^4.29.1",
    "filepond-plugin-file-poster": "^2.4.4",
    "filepond-plugin-image-crop": "^2.0.6",
    "filepond-plugin-image-preview": "^4.6.10",
    "framer-motion": "^4.1.17",
    "googleapis": "^85.0.0",
    "logrocket": "^2.0.0",
    "logrocket-react": "^4.0.1",
    "moment-range": "^4.0.2",
    "moment-timezone": "^0.5.33",
    "next": "^11.1.2",
    "next-auth": "^4.0.0-beta.2",
    "nodemailer": "^6.6.3",
    "nodemailer-direct-transport": "^3.3.2",
    "nodemailer-smtp-transport": "^2.7.4",
    "react": "^17.0.2",
    "react-apexcharts": "^1.3.9",
    "react-dom": "^17.0.2",
    "react-filepond": "^7.1.1",
    "react-joyride": "^2.3.1",
    "react-lottie": "^1.2.3",
    "react-select": "^4.3.1",
    "react-tabs": "^3.2.2",
    "react-transition-group": "^4.4.2",
    "serverless-mysql": "^1.5.4",
    "sql-template-strings": "^2.2.2",
    "v4-uuid": "^1.1.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^13.1.0",
    "@commitlint/config-conventional": "^13.1.0",
    "ag-grid-community": "^26.0.0",
    "ag-grid-react": "^26.0.0",
    "css-loader": "^6.2.0",
    "eslint-config-next": "^11.1.2",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "less": "^4.1.1",
    "less-loader": "^10.0.1",
    "lint-staged": "^11.1.2",
    "mini-css-extract-plugin": "^2.6.0",
    "prettier": "^2.4.0",
    "rsuite": "^4.10.2",
    "simple-git-hooks": "^2.6.1"
  },
  "prettier": {
    "semi": false,
    "singleQuote": false,
    "jsxSingleQuote": false
  },
  "eslintConfig": {
    "rules": {
      "react/prop-types": 0,
      "@next/next/no-img-element": 0,
      "import/no-anonymous-default-export": 0,
      "react/no-unescaped-entities": 0
    },
    "extends": [
      "eslint:recommended",
      "next",
      "prettier"
    ]
  },
  "simple-git-hooks": {
    "commit-msg": "npx --no-install commitlint --edit \"$1\"",
    "pre-commit": "npx --no-install lint-staged"
  },
  "lint-staged": {
    "*.{js,jsx,json,html,css}": [
      "npm run prettier:fix"
    ]
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  }
}
